@model List<DevFolio.Models.TblAdress>
@{
    ViewBag.Title = "AdresList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Listesi</h2>
<table class="table table-bordered">
    <tr>
        <td>S.N.</td>
        <td>Açıklama</td>
        <td>Lokasyon</td>
        <td>Telefon Numarası</td>
        <td>E-Posta</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AdressID</td>
            <td>@item.Description</td>
            <td>@item.Location</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Email</td>
            <td><a href="/Adress/AdresDelete/@item.AdressID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Adress/AdresUpdate/@item.AdressID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<td><a href="/Adress/AdresCreate" class="btn btn-info">Yeni Adres Ekle</a></td>