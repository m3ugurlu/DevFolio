@model DevFolio.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestmonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateTestmonial</h2>
<form method="post">
    <label>Referans ID</label>
    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
    <br />
    <label>Referans Adı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Referans Görseli</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Referans Yorumu</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Referansı Güncelle</button>
</form>
