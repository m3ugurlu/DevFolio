@model List<DevFolio.Models.TblService>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Açıklaması</th>
        <th>Hizmet Görseli</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServicesID</td>
            <td>@item.ServiceTitle</td>
            <td>@item.Description</td>
            <td>@item.ServiceImageUrl</td>
            <td><a href="/Service/DeleteService/@item.ServicesID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Service/CreateServices" class="btn btn-info">Yeni Servis Ekle</a></td>